<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintVertical_bias="0"
        android:src="@drawable/huiyanshiche"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <com.example.myapp.myapplication.MyCustomCircleProgressBar.CircleProgressBarView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:circle_textColor="@color/black"
        app:circle_textSize="20sp"
        app:progress_color="@color/black"
        app:bg_color="@color/white"
        app:bar_width="8dp"
        app:circle_text="关闭"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/circleProgressBar"
        />

</android.support.constraint.ConstraintLayout>