<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:id="@+id/scrollView"
    >
    <com.amap.api.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标准地图"
        android:id="@+id/normalMap"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="卫星地图"
        android:id="@+id/satelliteMap"
        android:layout_marginLeft="20px"
        app:layout_constraintLeft_toRightOf="@id/normalMap"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="夜间地图"
        app:layout_constraintLeft_toRightOf="@id/satelliteMap"
        android:id="@+id/nightMap"
        android:layout_marginLeft="20px"
        />
    <AutoCompleteTextView
        android:layout_width="280dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/normalMap"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:id="@+id/searchText"
        android:completionThreshold="1"
        android:inputType="text"
        android:maxLines="1"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/normalMap"
        android:layout_marginTop="20dp"
        android:text="搜索"
        app:layout_constraintLeft_toRightOf="@id/searchText"
        android:id="@+id/getInputBox"
        android:layout_marginLeft="20px"
        />
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/lightBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/makerInfo"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="导航"
            android:id="@+id/navi"
            app:layout_constraintRight_toRightOf="parent"
            />
        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:maxLines="1"
            android:background="@color/LittleWhite"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/distanceInfo"
            android:gravity="center"
            android:textColor="#000"
            />
        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:maxLines="1"
            android:background="@color/LittleWhite"
            app:layout_constraintTop_toBottomOf="@id/distanceInfo"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/titleInfo"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#000"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:maxLines="1"
            android:background="@color/LittleWhite"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/distanceInfo"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/streetInfo"
            android:gravity="center"
            android:textColor="#000"
            />

    </android.support.constraint.ConstraintLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="配置"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/configuration"

        />


</android.support.constraint.ConstraintLayout>