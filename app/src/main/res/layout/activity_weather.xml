<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.8"
        app:layout_constraintVertical_bias="0"
        android:id="@+id/top"
        android:background="@drawable/textview_border"
        >
        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@color/blue"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="40dp"
            android:id="@+id/getCity"
            android:text="获取城市"
            />
        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@color/blue"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="40dp"
            app:layout_constraintTop_toBottomOf="@id/cityInfo"
            android:layout_marginTop="20dp"
            android:id="@+id/getWeather"
            android:text="获取天气"
            />
        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@color/blue"
            app:layout_constraintLeft_toRightOf="@id/getCity"
            android:layout_marginLeft="40dp"
            android:id="@+id/cityInfo"
            android:gravity="center"
            android:textColor="#000"
            />
        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@color/blue"
            app:layout_constraintLeft_toRightOf="@id/getCity"
            app:layout_constraintTop_toBottomOf="@id/cityInfo"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:id="@+id/weatherNow"
            android:gravity="center"
            android:textColor="#000"
            />
        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@color/blue"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="40dp"
            app:layout_constraintTop_toBottomOf="@id/weatherNow"
            android:layout_marginTop="20dp"
            android:id="@+id/getMore"
            android:text="获取更多"
            />
        <ListView
            app:layout_constraintTop_toTopOf="@id/getMore"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.35"
            app:layout_constraintHeight_percent="0.6"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintHorizontal_bias="0"
            android:background="@color/blue"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"
            android:id="@+id/moreInfo"
            >
        </ListView>
        <ListView
            app:layout_constraintTop_toTopOf="@id/getMore"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/moreInfo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.35"
            app:layout_constraintHeight_percent="0.6"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintHorizontal_bias="0"
            android:background="@color/blue"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="40dp"
            android:id="@+id/airInfo"
            >
        </ListView>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/textview_border"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintVertical_bias="0"
        android:id="@+id/test2"
        >

        <Button
            android:id="@+id/getLife"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@color/blue"
            android:text="生活指数"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            />
        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@color/blue"
            app:layout_constraintLeft_toRightOf="@id/getLife"
            android:layout_marginLeft="40dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:text="未来三天天气"
            android:id="@+id/getWeatherForecast"
            />
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>